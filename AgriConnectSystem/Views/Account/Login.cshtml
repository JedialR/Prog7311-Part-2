@{
    ViewData["Title"] = "Login";
}

<h2 class="mt-4 mb-4 text-center">Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Error</div>
}

<form asp-action="Login" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label for="username" class="form-label">Username</label>
        <input name="username" id="username" class="form-control" placeholder="Enter your username" required aria-required="true" />
    </div>

    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required aria-required="true" />
        <div class="form-check mt-2">
            <input type="checkbox" class="form-check-input" id="showPassword" onclick="togglePassword()" />
            <label class="form-check-label" for="showPassword">Show Password</label>
        </div>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary w-50">Login</button>
    </div>
</form>

@section Scripts {
    <script>
        function togglePassword() {
            const passwordField = document.getElementById("password");
            passwordField.type = passwordField.type === "password" ? "text" : "password";
        }
    </script>
}

