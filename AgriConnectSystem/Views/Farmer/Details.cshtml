@model AgriConnectSystem.Models.Farmer

@{
    ViewData["Title"] = "Farmer Details";
}

<div class="container mt-4">
    <h2 class="mb-3">@Model.FullName's Profile</h2>

    <div class="card mb-4 p-3">
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Username:</strong> @Model.AppUser?.Username</p>
    </div>

    <h4 class="mb-3">Products</h4>

    @if (Model.Products != null && Model.Products.Any())
    {
        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Production Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Category</td>
                        <td>@product.ProductionDate.ToShortDateString()</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">This farmer has no products yet.</p>
    }
</div>
