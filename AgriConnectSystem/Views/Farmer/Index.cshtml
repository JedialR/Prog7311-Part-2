@model IEnumerable<AgriConnectSystem.Models.Farmer>

@{
    ViewData["Title"] = "Farmers";
}

<h2 class="text-center mb-4">All Registered Farmers</h2>

@if (!Model.Any())
{
    <div class="alert alert-info text-center">No farmers found.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Username</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farmer in Model)
            {
                <tr>
                    <td>@farmer.FullName</td>
                    <td>@farmer.Email</td>
                    <td>@farmer.AppUser?.Username</td>
                    <td>
                        <a asp-controller="Farmer" asp-action="Details" asp-route-id="@farmer.Id" class="btn btn-sm btn-info">
                            Details
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
