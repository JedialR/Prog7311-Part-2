@{
    ViewData["Title"] = "Add Farmer";
}

<h2 class="text-center mb-4">Create Farmer Profile</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger text-center">@ViewBag.Error</div>
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-success text-center">@TempData["Message"]</div>
}

<form asp-action="Create" method="post" class="w-50 mx-auto">
    <div class="mb-3">
        <label>Username</label>
        <input name="username" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Password</label>
        <input name="password" type="password" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Full Name</label>
        <input name="fullName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <input name="email" type="email" class="form-control" required />
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-success w-50">Create Farmer</button>
    </div>
</form>

